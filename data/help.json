        {
            "name": "Tracking",
            "description": "Commands for tracking character information.",
            "commands": [
                {
                    "name": "Add Character Location",
                    "description": "Displays Character Location of a character.",
                    "usage": "!addlocation \"[character name]\" ![new location]",
                    "example": "!addlocation \"Jimmy\" !Earth"
                },
                {
                    "name": "Add Character",
                    "description": "Add a new character to the characters list.",
                    "usage": "!addcharacter [name]",
                    "example": "!addcharacter Dave the Impaler"
                },
                {
                    "name": "Edit Character",
                    "description": "Edit the information of an existing character.",
                    "usage": "!editcharacter [character name] [field] [new value]",
                    "example": "!editcharacter Jimmy location Mars",
                    "details": [
                        {
                            "field": "character name",
                            "description": "The name of the character you want to edit. This must match an existing character in the database.",
                            "example": "Jimmy"
                        },
                        {
                            "field": "field",
                            "description": "The field you want to edit. Valid options are 'location' and 'tupperbrackets'.",
                            "example": "location"
                        },
                        {
                            "field": "new value",
                            "description": "The new value you want to set for the specified field.",
                            "example": "Mars"
                        }
                    ]
                },
                {
                    "name": "Character Info",
                    "description": "Displays information about a character.",
                    "usage": "!characterinfo [character] ",
                    "example": "!characterinfo Jimmy"
                }
            ]
        }
       
    ]
